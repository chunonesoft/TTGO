<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout        
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >   
        <!-- 联赛名称 -->
        <TextView
            android:id="@+id/tv_cn_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TTGO店招平台"
            android:layout_margin="10dp"
            android:textColor="#9f9f9f"
             />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_cn_name"     
            android:layout_alignBottom="@id/tv_cn_name"
            android:layout_toRightOf="@id/tv_cn_name" 
            android:background="@drawable/arrow_right"
            />
        <TextView
            android:id="@+id/match_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款成功"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:textColor="@color/title"
             />
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/top_line" />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/detail_show_3" 
            />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textColor="@color/black" 
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:text="【女王节精选】杭州法丽娅服饰有限公司水洗牛仔裤  2016春款"
            android:layout_toRightOf="@id/iv"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textColor="#9f9f9f" 
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:text="颜色分类：牛仔裤XL码"
            android:layout_toRightOf="@id/iv"
            android:textSize="12sp"
            
            android:layout_below="@id/tv_content"
            />
        
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/top_line" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/title" 
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:text="退款金额：¥190.99"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:id="@+id/tv_back"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/tv_sale"
            android:layout_toLeftOf="@id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/black" 
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:text="交易金额：¥190.99"
            android:textSize="12sp"
            android:layout_margin="5dp"
            />
    </RelativeLayout>
    

</LinearLayout>
